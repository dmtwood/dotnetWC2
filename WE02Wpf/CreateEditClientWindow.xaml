<Window x:Class="WE02Wpf.CreateEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WE02Wpf"
        mc:Ignorable="d"
      Title="New Client" Height="136.875" Width="233.75">
    <Grid>
        <Label Content="_First name:" Target="{Binding ElementName=TxtFirstName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="_Last name:" Target="{Binding ElementName=TxtLastName}" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtFirstName" Height="23" Margin="82,14,24,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtLastName" Height="23" Margin="82,45,24,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="BtnCreate" Content="_Create" HorizontalAlignment="Left" Margin="137,73,0,0" Width="75" IsDefault="True" Height="20" VerticalAlignment="Top" Click="BtnCreate_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="57,73,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
    </Grid>
</Window>